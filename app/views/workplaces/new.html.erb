<% provide(:title, "New Workplace") %>

<div class="row justify-content-center">
  <div class="col-sm-12">
    <h3 class="text-center">Create Workplace</h3>
  </div>

  <div class="col-xs-12 col-sm-10 col-md-8 col-lg-7 col-xl-4">
    <div class="card">
      <div class="card-body">
        <%= form_for @workplace do |f| %>
          <%= render 'shared/error_messages', object: @workplace %>

          <div class="form-group">
            <%= f.label :name, "Workplace Name" %>
            <%= f.text_field :name, class: "form-control", autofocus: true, required: true, placeholder: "Workplace Name", maxlength: 50, minlength: 3, pattern: "[a-z0-9-]+" %>
            <small id="workplace_name" class="form-text text-muted">Workplace name should contain only letters, hyphen & numbers.</small>
          </div>

          </br>

          <%= f.submit class: "btn btn-primary btn-xs-block", data: { disable_with: "Saving..." } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
