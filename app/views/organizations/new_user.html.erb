<% provide(:title, "New User") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12">
      <h3 class="text-center">New User</h3>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8">
      <div class="card">
        <div class="card-body">
          <%= form_for @user, url: create_user_organization_path, method: :post do |f| %>
            <%= render 'shared/error_messages', object: @user %>

            <div class="form-group">
              <%= f.label :name, "Name" %>
              <%= f.text_field :name, class: "form-control", autofocus: true, required: true, placeholder: "Name", maxlength: 100 %>
            </div>

            <div class="form-group">
              <%= f.label :email, "Email" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, required: true, placeholder: "Email", maxlength: 100 %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Password" %>
              <%= f.password_field :password, class: "form-control", autofocus: true, required: true, placeholder: "Password", maxlength: 100 %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Password Confirmation" %>
              <%= f.password_field :password_confirmation, class: "form-control", autofocus: true, required: true, placeholder: "Password Confirmation", maxlength: 100 %>
            </div>

            <%= f.submit "Create User", class: "btn btn-primary btn-xs-block", data: { disable_with: "Saving..." } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
