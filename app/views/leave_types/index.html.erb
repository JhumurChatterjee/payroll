<% provide(:title, "Leave Types") %>

<section class="table-header">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Leave Types List</h3>
    </div>

    <div class="col-sm-12 col-md-6 text-md-right">
      <%= link_to "Add New", new_leave_type_path, class: "btn btn-primary", title: "Add new leave type" %>
    </div>
  </div>
</section>

<table class="table table-hover" width="100%">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>Type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_types.each do |leave_type| %>
      <tr>
        <td><%= link_to leave_type.id, leave_type_path(leave_type) %></td>
        <td><%= leave_type.leave_type %></td>
        <td><%= link_to "Edit", edit_leave_type_path(leave_type) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
