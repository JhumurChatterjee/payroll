<% provide(:title, @status.status_type) %>

<div class="row justify-content-center">
  <div class="col-sm-12 col-md-8 col-lg-7">
    <div class="card details-card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span>Status - <%= @status.status_type %></span>
        <span>
          <%= link_to "Edit", edit_status_path(@status), class: "btn btn-sm btn-primary" %>
        </span>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-md-6 col-sm-12 details-row">
            <label>Type</label>
            <span><%= @status.status_type %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
