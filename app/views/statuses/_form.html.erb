<div class="col-xs-12 col-sm-10 col-md-8 col-lg-7 col-xl-4">
  <div class="card">
    <div class="card-body">
      <%= form_for @status do |f| %>
        <%= render 'shared/error_messages', object: @status %>

        <div class="form-group">
          <%= f.label :name, "Status" %>
          <%= f.text_field :status_type, class: "form-control", autofocus: true, required: true, placeholder: "Type", maxlength: 100 %>
        </div>

        </br>

        <div class="form-row">
          <div class="col-xs-12 order-2 order-sm-1 col-sm-3">
            <% if f.object.id %>
              <%= link_to "Delete", status_path(@status), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs-block delete-btn" %>
            <% end %>
          </div>

          <div class="col-xs-12 text-right order-1 order-sm-2 col-sm-9">
            <%= link_to "Cancel", statuses_path, class: "btn btn-light btn-xs-block" %>
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-xs-block", data: { disable_with: "Saving..." } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
