<% provide(:title, "Departments") %>

<section class="table-header">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Departments List</h3>
    </div>

    <div class="col-sm-12 col-md-6 text-md-right">
      <%= link_to "Add New", new_department_path, class: "btn btn-primary", title: "Add new department" %>
    </div>
  </div>
</section>

<table class="table table-hover" width="100%">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= link_to department.id, department_path(department) %></td>
        <td><%= department.name %></td>
        <td><%= link_to "Edit", edit_department_path(department) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
